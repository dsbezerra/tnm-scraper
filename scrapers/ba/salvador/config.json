{
"name": "salvador",
  "baseURI": "http://www.compras.salvador.ba.gov.br/",
  "charset": "utf-8",
  "delay": 5000,
  "randomizeDelay": true,
  "routine": [
    {
      "id": "GET_LINKS",
      "name": "GetLinks",
      "request": {
        "baseURI": "http://www.compras.salvador.ba.gov.br/novo/",
        "postURI": "?secao=licitacao_busca",
        "method": "POST",
        "form": {
          "modalidade": 0,
          "ordenacao": "lipr.lipr_data",
          "periodo_inicio": "10/09/2016"
        }
      },
      "list": true,
      "selectors": {
        "container": "body > div.quem_somos > div:nth-child(3)",
        "link": "div.link_noticias"
      }
    },
    {
      "id": "GET_DETAILS",
      "name": "GetDetails",
      "request": {
        "baseURI": "http://www.compras.salvador.ba.gov.br/novo/",
        "method": "GET"
      },
      "selectors": {
        "modality": "body > div.quem_somos > div > div:nth-child(2) > div > h1",
        "link": "body > div.quem_somos > div a[target='_blank']",
	"container": "body > div.quem_somos > div"
      },
      "patterns": {
        "date": "\\d{2}\/\\d{2}\\/\\d{4}",
        "agency": "(?:Órgão) (?:Licitante|Solicitante): ([A-Z]*)",
        "description": "(?:Objeto): (.*)(?:Informações Complementares:)",
        "number": "(?:Número): (\\d{1,}\/\\d{4})"
      }
    }
  ]
}